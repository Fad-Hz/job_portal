<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            background-color: #007bff;
            color: white;
            padding-top: 20px;
            transition: width 0.3s ease-in-out;
            /* Add transition for smooth animation */
        }

        .sidebar.collapsed {
            /* Style when sidebar is collapsed */
            width: 60px;
            /* Or any width you prefer */
        }

        .sidebar.collapsed .list-group-item span {
            display: none;
            /* Hide text when collapsed */
        }

        .sidebar.collapsed h2 {
            display: none;
            /* Hide text when collapsed */
        }

        .sidebar.collapsed .list-group-item i {
            margin-right: 0;
            /* Adjust icon margin */
            text-align: center;
            width: 100%;
        }


        .sidebar h2 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        .sidebar .list-group-item {
            background-color: #007bff;
            color: white;
            border: none;
            font-size: 1.2rem;
            margin-bottom: 10px;
            padding: 15px;
            display: flex;
            /* Use flexbox for alignment */
            align-items: center;
            /* Vertically center icon and text */
        }

        .sidebar .list-group-item i {
            margin-right: 10px;
            /* Space between icon and text */
        }

        .sidebar .list-group-item:hover {
            background-color: #0056b3;
        }

        .content {
            margin-left: 270px;
            /* Initial margin */
            padding: 20px;
            transition: margin-left 0.3s ease-in-out;
            /* Add transition */
        }

        .content.expanded {
            /* Margin when sidebar is expanded */
            margin-left: 270px;
            /* Or your preferred expanded margin */
        }

        .content.collapsed {
            /* Margin when sidebar is collapsed */
            margin-left: 80px;
            /* Or your preferred collapsed margin */
        }

        /* Style for the toggle button */
        #sidebar-toggle {
            position: absolute;
            top: 20px;
            right: -25px;
            /* Adjust as needed */
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            z-index: 1000;
            /* Ensure it's above the sidebar */
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">=</a>
    </nav>

    <div class="d-flex">
        <div class="sidebar" id="sidebar">
            <h2>JobsEsc</h2>
            <button id="sidebar-toggle"><i class="fas fa-bars"></i></button>
            <div class="list-group">
                <a href="/dashboard" class="list-group-item list-group-item-action"><i class="fas fa-home"></i>
                    <span>Dashboard</span></a>
                <a href="/admin/users" class="list-group-item list-group-item-action"><i class="fas fa-users"></i>
                    <span>Users</span></a>
                <a href="/admin/jobs" class="list-group-item list-group-item-action"><i class="fas fa-briefcase"></i>
                    <span>Jobs</span></a>
                <a href="/admin/jobs/applied" class="list-group-item list-group-item-action"><i
                        class="fas fa-folder-open"></i> <span>Applied Jobs</span></a>
                <a href="/auth/logout" class="list-group-item list-group-item-action"><i
                        class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
            </div>
        </div>
        <div class="content" id="content">
            <%- body %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const sidebarToggle = document.getElementById('sidebar-toggle');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
            content.classList.toggle('expanded');
            sidebarToggle.querySelector('i').classList.toggle('fa-bars');
            sidebarToggle.querySelector('i').classList.toggle('fa-times');
        });
    </script>
</body>

</html>