<div class="container mt-4">
    <h1 class="mb-3">Applied Job Detail</h1>

    <% if (error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
        <% } %>

            <% if (success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <% } %>

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Job Information</h4>
                            <p><strong>Position:</strong>
                                <%= aplication.job.position %>
                            </p>
                            <p><strong>Company:</strong>
                                <%= aplication.job.company %>
                            </p>
                            <p><strong>Location:</strong>
                                <%= aplication.job.location %>
                            </p>
                            <p><strong>Work Type:</strong>
                                <%= aplication.job.workType %>
                            </p>
                            <p><strong>Work Location:</strong>
                                <%= aplication.job.workLocation %>
                            </p>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-body">
                            <h4 class="card-title">Applicant Information</h4>
                            <p><strong>Name:</strong>
                                <%= aplication.user.fullName %>
                            </p>
                            <p><strong>Email:</strong>
                                <%= aplication.user.email %>
                            </p>
                            <p><strong>Phone:</strong>
                                <%= aplication.user.phone %>
                            </p>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-body">
                            <h4 class="card-title">Application Details</h4>
                            <p><strong>Status:</strong>
                                <%= aplication.status %>
                            </p>
                            <p><strong>Applied At:</strong>
                                <%= aplication.appliedAt.toDateString() %>
                            </p>
                            <% if (aplication.resume) { %>
                                <p><strong>Resume:</strong> <a href="/admin/resume/download/<%= encodeURIComponent(aplication.resume.split('/').pop()) %>">Download</a>
                                <% } %>
                                    <% if (aplication.coverLetter) { %>
                                        <p><strong>Cover Letter:</strong></p>
                                        <p>
                                            <%= aplication.coverLetter %>
                                        </p>
                                        <% } %>
                        </div>
                    </div>

                    <div class="mt-3">
                        <form action="/admin/jobs/applied/<%= aplication._id %>" method="POST">
                            <label for="status">Change Status:</label>
                            <select name="status" class="form-select" onchange="this.form.submit()">
                                <option value="pending" <%=aplication.status==='applied' ? 'selected' : '' %>>Applied
                                </option>
                                <option value="pending" <%=aplication.status==='reviewed' ? 'selected' : '' %>>Reviewed
                                </option>
                                <option value="accepted" <%=aplication.status==='accepted' ? 'selected' : '' %>>Accepted
                                </option>
                                <option value="rejected" <%=aplication.status==='rejected' ? 'selected' : '' %>>Rejected
                                </option>
                            </select>
                        </form>
                        <a href="/admin/jobs/applied" class="btn btn-secondary mt-2">Back</a>
                    </div>
</div>