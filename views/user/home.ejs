<style>
    body {
  font-family: sans-serif;
  font-size: 16px; /* Ukuran font dasar untuk desktop */
}

section {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.5s ease, transform 0.5s ease;
}

section.active {
  opacity: 1;
  transform: translateY(0);
}

h2 {
  font-size: 2rem; /* Ukuran font sedang untuk desktop */
  margin-bottom: 20px;
  text-align: center;
}

p {
  font-size: 1rem; /* Ukuran font normal untuk desktop */
  line-height: 1.5;
  margin-bottom: 15px;
}

.content {
  padding: 30px 15px;
}

/* Jumbotron styles */
.jumbotron {
  background: #f8f9fa;
  color: #343a40;
  padding: 60px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  margin-top: 20px;
  text-align: center;
  min-height: 50vh;
}

.jumbotron h1 {
  font-size: 2rem; /* Ukuran font besar untuk desktop */
  font-weight: bold;
  margin-bottom: 1rem;
}

.jumbotron p {
  font-size: 1rem; /* Ukuran font sedang untuk desktop */
  margin-bottom: 2rem;
  line-height: 1.4;
}

.btn-lg {
  font-size: 1rem; /* Ukuran font sedang untuk desktop */
  padding: 10px 20px;
  margin: 0 5px;
  border-radius: 8px;
}

/* Features styles */
.features i {
  font-size: 2rem;
  margin-bottom: 10px;
  color: #007bff;
}

.features h4 {
  font-size: 1.4rem; /* Ukuran font sedang untuk desktop */
  font-weight: bold;
  margin-bottom: 5px;
}

.features p {
  font-size: 1rem; /* Ukuran font normal untuk desktop */
  line-height: 1.4;
}

/* Contact styles */
#contact {
  background-color: #f8f9fa;
  padding: 30px 15px;
}

#contact h2 {
  font-size: 2rem;
  margin-bottom: 20px;
}

#contact label {
  font-weight: bold;
  font-size: 1rem;
}

#contact textarea {
  resize: vertical;
  font-size: 1rem;
}

.whatsapp-button {
  background-color: #25D366;
  color: white;
  padding: 8px 16px;
  border: none;
  border-radius: 5px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.whatsapp-button i {
  margin-right: 5px;
}

/* Media query for smaller screens (mobile) */
@media (max-width: 768px) {
  body {
    font-size: 14px; /* Ukuran font dasar lebih kecil untuk mobile */
  }

  h2 {
    font-size: 1.8rem;
  }

  p, label, textarea, .features p, .jumbotron p, .whatsapp-button {
    font-size: 0.9rem;
  }

  .jumbotron h1 {
    font-size: 1.6rem;
  }

  .jumbotron p {
    font-size: 0.9rem;
  }

  .btn-lg {
    font-size: 0.9rem;
  }

  .features h4 {
    font-size: 1.2rem;
  }

  .features i {
    font-size: 1.6rem;
  }

  .content {
    padding: 20px 10px;
  }

  .jumbotron {
    padding: 40px 15px;
  }

  .whatsapp-button {
    font-size: 0.9rem;
    padding: 6px 12px;
  }
}
</style>

