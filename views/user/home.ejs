<section id="contact" class="mt-5">
    <div class="container">
        <h2><i class="fas fa-envelope"></i> Contact Us</h2>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form id="contactForm">
                    <div class="form-group mb-3">
                        <label for="message">Message:</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>

                    <a href="https://wa.me/6288297758043?text=" class="whatsapp-button" target="_blank"
                        id="whatsappButton">
                        <i class="fab fa-whatsapp"></i> Send Message via WhatsApp
                    </a>

                </form>
            </div>
        </div>
    </div>
</section>
<script>
    const sections = document.querySelectorAll('section');

    function animateSections() {
        sections.forEach(section => {
            const sectionTop = section.getBoundingClientRect().top;
            const triggerPoint = window.innerHeight * 0.8; // Trigger animation when 80% of section is visible

            if (sectionTop < triggerPoint) {
                section.classList.add('active');
            } else {
                section.classList.remove('active'); // Optional: Reset animation when scrolling up
            }
        });
    }

    window.addEventListener('scroll', animateSections);
    animateSections(); // Call initially to animate sections already in view

    const whatsappButton = document.getElementById('whatsappButton');
    const messageInput = document.getElementById('message');

    whatsappButton.addEventListener('click', (event) => {
        const message = encodeURIComponent(messageInput.value); // Encode message for URL
        whatsappButton.href = `https://wa.me/6288297758043?text=${message}`; // Construct WhatsApp URL
    });
</script>